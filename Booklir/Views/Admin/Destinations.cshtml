@model Booklir.Core.Results.IPagedResult<Destination>

  @{
    ViewData["Title"] = "Destinations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>


<div class="card shadow-sm">
   <div class="card-header d-flex justify-content-between">
        <h5 class="mb-0">Manage Destination</h5>
        <a asp-action="CreateDestination" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>
            New Destination
        </a>
   </div>
    
   <div class="card-body">
       <div class="table-responsive">
           <table class="table table-hover"><thead>
                     <tr>
                          <th scope="col">Id</th>
                          <th scope="col">Name</th>
                          <th scope="col">Image</th>
                          <th scope="col">Status</th>
                          <th scope="col">Actions</th>
                     </tr>
                </thead>
                <tbody>
                     @foreach (var destination in Model.Items)
                     {
                          <tr data-id="@destination.Id">
                            <td>@destination.Id</td>
                            <td>@destination.Name</td>
                            <td><img src="@destination.ImageUrl" alt="@destination.Name" class="img-thumbnail" width="40" height="40" /></td>
                        @*     <td>@(destination.IsActive ? "Active" : "Inactive")</td> *@
                            <td><input type="checkbox" class="toggle-dest-active form-check-input" @(destination.IsActive ? "checked" : "") /></td>
                            <td>
                                <!-- Edit Destination -->
                                <a asp-action="UpdateDestination"
                                   asp-route-id="@destination.Id"
                                   class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                               
                            </td>
                          </tr>
                     }
                </tbody>
                </table>
       </div>
   </div>

</div>